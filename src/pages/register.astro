---
import Base from "../layout/Base.astro";
const title = "Register";
---

<Base title={title}>
  <main class="flex-1 flex flex-col gap-4 items-center p-4 justify-center">
    <section class="w-full max-w-md">
      <h1
        class="font-semibold text-2xl  text-white w-full mb-1"
      >
        {title}
      </h1>
      <p class="text-white text-sm mb-8 w-full">
        Already have an account? <a
          href="/signin"
          class="d text-blue-600 underline underline-offset-2 font-medium transition-all hover:text-blue-800"
          >Sign in</a
        >
      </p>
      <form
        action="/api/auth/register"
        method="post"
        class="grid grid-cols-1 gap-3 w-full"
      >
        <div class="grid grid-cols-1 gap-2">
          <label
            for="email"
            class="font-medium text-white text-sm"
            >Email</label
          >
          <input
            id="email"
            type="email"
            name="email"
            class="rounded-md py-1 px-3 border bg-zinc-50 border-zinc-300  focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-600  focus:bg-white focus:ring-opacity-60"
          />
        </div>
        <div class="grid grid-cols-1 gap-2">
          <label
            for="password"
            class="font-medium text-white text-sm"
            >Password</label
          >
          <input
            id="password"
            type="password"
            name="password"
            class="rounded-md py-1 px-3 border bg-zinc-50 border-zinc-300  focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-600  focus:bg-white focus:ring-opacity-60"
          />
        </div>
        <button
          type="submit"
          class="hover:bg-zinc-700 transition all hover:text-zinc-100 bg-zinc-100 border-zinc-900 py-1.5 border rounded-md mt-2 text-zinc-900 font-medium text-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500  disabled:opacity-50 disabled:cursor-not-allowed"
          >Register</button
        >
      </form>
    </section>
  </main>
</Base>
